.portfolio-work
  &:not(:last-child)
    margin-right 80px
    &:hover
      .portfolio-work__image
        transform translateY(-10px)
  &__image
    width 540px
    height 300px
    transition .6s var(--animation)
  &__info
    margin-top 24px
    padding-right 90px
    &_left
      &:before
        content ''
        display block
        width 90px
        height 1px
        background-color #ffffff
        margin-top 12px
        margin-right 12px
    &_category
      color #ffffff
      font-family "Proxima Nova Th"
      font-size 15px
      font-weight 400
      line-height 28px
      letter-spacing 1.8px

  &__title
    color #ffffff
    font-family "Proxima Nova Rg"
    font-size 22px
    font-weight 400
    line-height 28px
    letter-spacing 2.64px

  &__year
    color #ffffff
    font-family "Proxima Nova Th"
    font-size 22px
    font-weight 400
    line-height 28px
    letter-spacing 2.64px
