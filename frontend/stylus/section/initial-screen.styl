.section--initial-screen
  height 100vh
  overflow hidden
  &__title
    color #343434
    font-size 45px
    font-weight 500
    line-height 51px
  &__description
    color #4a4a4a
    font-size 16px
    font-weight 300
    line-height 26px
    margin-left 12px
    margin-top 35px
    margin-right 70px

  &__navigation
    margin-right 125px
    margin-left 5px
    &_item
      &:not(:first-child)
        margin-top 40px
    &_link
      opacity 0.8
      color #343434
      font-size 19px
      font-weight 400
      &.active
        transform scale(1.5)
        font-weight 500

  &__buttons
    margin-top 35px
    &_more
      color #505050
      font-size 16px
      font-weight 500
      padding 12px 20px
      margin-right 15px
      position relative
      box-shadow 0px 0px 0px rgba(227, 143, 3, 0.25)
      transition .6s box-shadow var(--animation)
      .more__svg
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        &_rect
          fill transparent
          stroke-width 2px
          stroke var(--yellow)
          stroke-dasharray 40 155
          stroke-dashoffset 20
          animation-fill-mode both
          animation 1s button-more infinite linear
          animation-play-state paused
      &:hover
        box-shadow 0px 0px 24px rgba(227, 143, 3, 0.25)
        .more__svg
          &_rect
            animation-play-state running


  &__social
    position absolute
    left 0
    bottom 60px
    width 100%
    &_slash
      color #4a4a4a
      font-size 16px
      font-weight 400
      margin-left 13px
      margin-right 13px
    &_link
      color #1b2620
      font-size 16px
      font-weight 400
      letter-spacing 1.12px
      transition .3s transform var(--animation)
      &:hover
        transform translateY(-5px)

  &__button
    width 150px
    height 69px
    background-color #ffca72
    border-radius 2px
    animation .6s slide-button var(--animation)
    animation-delay 1.6s
    animation-fill-mode both
    .icon
      width 20px
      height 20px
      fill #333333
    &--next
      margin-bottom 55px
      .icon
        transform rotate(180deg)
    &--prev
      margin-top 55px


  .slide
    grid-template-columns 1fr 1fr
    grid-template-rows repeat(1, 100vh)
    margin 0 100px
    position relative
    &__img
      grid-column 1/3
      grid-row 1
      transform translate3d(460px,0,0) scale(1.1)
      transition .33s linear
      z-index -1
    &__left
      grid-column 1
      grid-row 1
      padding-right 55px
      background #ffffff
      &_wrap
        margin-top 15px

    &__button
      grid-row 1
      z-index 2
      &_wrap
        background #fff
        width max-content
        height max-content
      &--prev
        grid-column 2
      &--next
        grid-column 1


    &__image
      grid-column 2
      grid-row 1
      grid-template-columns 1fr 1fr
      grid-template-rows repeat(1, 100vh)
      &:before
        content ''
        background #fff
        z-index 3
        height 100%
        grid-column 1
        grid-row 1
        animation 1s slide-line-left var(--animation)
        animation-fill-mode both
        animation-delay .6s
      &:after
        content ''
        background #fff
        z-index 3
        height 100%
        grid-column 2
        grid-row 1
        animation 1s slide-line-right var(--animation)
        animation-fill-mode both
        animation-delay .6s
