.section--services
  margin-top 125px
  margin-right 100px
  &__title
    color #4a4a4a
    font-size 36px
    font-weight 500
    margin-left 36%
  .button--yellow
      margin-top 35px
      margin-left -75px
  &__list
    margin-left 70px
    margin-top 35px
    &_item
      &:not(:first-child)
        margin-top 28px
    &_link
      color #4a4a4a
      font-size 18px
      font-weight 500

  &__grid
    grid-template-columns 1.1fr 1fr
    grid-template-rows 250px 250px
    margin-top 40px
  &__video
    grid-column 1
    grid-row 1/3

    grid-template-columns 1fr
    grid-template-rows 1fr 1fr
    &_preview
      grid-column 1
      grid-row 1/3
    &:before
      content ''
      background #ffffff
      grid-column 1
      grid-row 1
      z-index 1
      transform translateX(90%)
    &:after
      content ''
      background #ffffff
      grid-column 1
      grid-row 2
      z-index 1
      transform translateX(-90%)

  &__info
    position relative
    z-index 1
    margin-top 20px
    max-width 80%
    margin-left -30px
    &_title
      color #4a4a4a
      font-size 21px
      font-weight 500
    &_description
      color #4a4a4a
      font-size 16px
      font-weight 300
      line-height 27px
      margin-top 21px
