*
  margin 0
  padding 0
  font-size 100%
  line-height 100%
  box-sizing border-box
button
  cursor pointer
  border 0
  outline 0
  background none
ul
  list-style none
a
  text-decoration none
body
  font-family "Avenir Next Cyr", sans-serif

::selection
  background var(--yellow)
  color #333
img,video
  width 100%
  height 100%
  object-fit cover
input[type='number']
    -webkit-appearance none
    -moz-appearance textfield


input,select,textarea
  border 0
  outline 0
textarea
  font-family inherit
  height 150px
input[type='submit']
  + label
    cursor pointer
input
  &:disabled
    background 0

table
  width 100%
  th
    text-align inherit
